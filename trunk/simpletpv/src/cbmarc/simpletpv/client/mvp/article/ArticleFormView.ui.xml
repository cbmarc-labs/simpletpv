<!-- ArticleFormView.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
  <g:HorizontalPanel>
    <g:VerticalPanel>
      <g:Label ui:field="labelLabel" />
      <g:TextBox ui:field="labelTextBox" />
    
      <g:Label ui:field="descriptionLabel" />
      <g:TextBox ui:field="descriptionTextBox" />
    
      <g:Label ui:field="priceLabel" />
      <g:TextBox ui:field="priceTextBox" />
    
      <g:HorizontalPanel>
        <g:Button ui:field="submitButton" />
        <g:Button ui:field="cancelButton" />
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:HorizontalPanel>

</ui:UiBinder>