<!-- ArticleFormView.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
  <g:HTMLPanel>
      <div><b><g:Label ui:field="labelLabel" /></b></div>
      <div><g:TextBox ui:field="labelTextBox" /></div>
    
      <div><b><g:Label ui:field="descriptionLabel" /></b></div>
      <div><g:TextBox ui:field="descriptionTextBox" /></div>
    
      <div><b><g:Label ui:field="priceLabel" /></b></div>
      <div><g:TextBox ui:field="priceTextBox" /></div>
    
      <g:HorizontalPanel>
        <g:Button ui:field="submitButton" />
        <g:Button ui:field="cancelButton" />
      </g:HorizontalPanel>
  </g:HTMLPanel>

</ui:UiBinder>